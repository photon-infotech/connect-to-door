<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.photon.connecttodoor"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" >
        <activity
            android:name="com.photon.connecttodoor.activity.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.photon.connecttodoor.activity.ProfilActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.photon.connecttodoor.activity.WelcomeScreenActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.photon.connecttodoor.activity.VoucherActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.photon.connecttodoor.activity.DailyAttendanceActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.photon.connecttodoor.activity.AttendanceListActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.photon.connecttodoor.activity.SignInActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.photon.connecttodoor.activity.AttendanceFormActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.photon.connecttodoor.activity.ReportActivity"
            android:screenOrientation="landscape" >
        </activity>
        <activity android:name="com.facebook.LoginActivity"
                  android:theme="@android:style/Theme.Translucent.NoTitleBar"
                  android:label="@string/app_name" />
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/applicationId" />
    </application>

</manifest>