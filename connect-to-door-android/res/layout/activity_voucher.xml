<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_allpages"
    android:gravity="right"
    android:orientation="vertical"
    tools:context=".VoucherActivity" >

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="280dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="40dp"
        android:paddingLeft="10dp"
        android:background="@drawable/box_transparentvoucher"
        android:orientation="vertical" >

        <Button
            android:id="@+id/voucherrequest_button"
            android:layout_width="285dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:background="@drawable/button_voucherrequest" />

        <Button
            android:id="@+id/voucherreimbursement_button"
            android:layout_width="285dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_voucherreimbursement" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/back_button"
            android:layout_width="120dp"
            android:layout_height="65dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="45dp"
            android:layout_weight="0.01"
            android:background="@drawable/button_back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1" >
        </LinearLayout>

        <Button
            android:id="@+id/signout_button"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="45dp"
            android:layout_weight="0.01"
            android:background="@drawable/button_signout" />
    </LinearLayout>

</LinearLayout>