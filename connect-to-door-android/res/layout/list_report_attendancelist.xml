<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/header_table_background" >

            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="No"
                android:textColor="#ffffff" >
            </TextView>

            <ImageView
                android:layout_width="2dp"
                android:layout_height="56dp"
                android:background="#86AA8E" />

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="Name"
                android:textColor="#ffffff" >
            </TextView>

            <ImageView
                android:layout_width="2dp"
                android:layout_height="56dp"
                android:background="#86AA8E" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="Employee ID"
                android:textColor="#ffffff" >
            </TextView>

            <ImageView
                android:layout_width="2dp"
                android:layout_height="56dp"
                android:background="#86AA8E" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="Project ID"
                android:textColor="#ffffff" >
            </TextView>

            <ImageView
                android:layout_width="2dp"
                android:layout_height="56dp"
                android:background="#86AA8E" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="Total Attendance"
                android:textColor="#ffffff" >
            </TextView>

            <ImageView
                android:layout_width="2dp"
                android:layout_height="56dp"
                android:background="#86AA8E" />

            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="Total Working"
                android:textColor="#ffffff" >
            </TextView>

            <ImageView
                android:layout_width="2dp"
                android:layout_height="56dp"
                android:background="#86AA8E" />

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="Total Leave"
                android:textColor="#ffffff" >
            </TextView>

            <ImageView
                android:layout_width="2dp"
                android:layout_height="56dp"
                android:background="#86AA8E" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="Average Working Hour"
                android:textColor="#ffffff" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/table_report_attendancelist"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:columnWidth="50dp"
                android:gravity="center"
                android:numColumns="auto_fit"
                android:stretchMode="columnWidth" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>